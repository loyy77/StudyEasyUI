<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <package name="fm" namespace="/fm" extends="default">

       	<action name="login_*" class="loyy.action.LoginAction" method="{1}">
       		<result name="input" type="freemarker">/WEB-INF/Templates/input.ftl</result>
       		<result type="freemarker">/WEB-INF/Templates/login.ftl</result>
       	</action>
       	<action name="book_*" class="loyy.action.BookAction" method="{1}">
       		<result name="toAdd" type="freemarker">/WEB-INF/Templates/add.ftl</result>
       		<result name="toEdit" type="freemarker">/WEB-INF/Templates/edit.ftl</result>
       		<result name="success" type="freemarker">/WEB-INF/Templates/bookList.ftl</result>
       		<result name="list" type="freemarker">/WEB-INF/Templates/bookList.ftl</result>
       	</action>
       
        <!-- Add actions here -->
    </package>
</struts>
